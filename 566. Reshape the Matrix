class Solution {
    public int[][] matrixReshape(int[][] nums, int r, int c) {
        int[][] result = new int[r][c];
        int width = nums.length;
        int height = nums[0].length;
        int pos = 0;
        int s = 0, k = 0;
        
        if (width*height != r*c){
            return nums;
        }else{
            for (int i = 0; i < r; i++){
                for (int j = 0; j < c; j++){
                    pos = i*c + j;
                    result[i][j] = nums[pos/height][pos%height];
                }
            }
            return result;
        }
    }
}
